<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dilog_bacground"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:text="正在下载更新包"
        android:textColor="@color/gray"
        android:textSize="18sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.1dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_textcolor" />

    <com.ruan.qshy.view.LineProgressBar
        android:id="@+id/line_progresbar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        app:lineborderWidth="2dp"
        app:progressRadius="14dp" />

</LinearLayout>